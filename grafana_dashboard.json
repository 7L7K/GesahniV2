{
  "title": "GesahniV2 Sample",
  "uid": "gesahni-sample",
  "version": 1,
  "panels": [
    {
      "title": "Request Latency (95th)",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(app_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "title": "Cache Hit Rate",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(app_request_total{engine=\"cache\"}[5m])) / sum(rate(app_request_total[5m]))",
          "legendFormat": "hit rate"
        }
      ]
    },
    {
      "title": "Request Cost",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(app_request_cost_usd_sum[5m]))",
          "legendFormat": "USD/s"
        }
      ]
    },
    {
      "title": "Request Volume",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(app_request_total[5m]))",
          "legendFormat": "req/s"
        }
      ]
    }
  ]
}
