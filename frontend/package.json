{
  "name": "gesahni-frontend",
  "version": "0.6.5",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS=\"--dns-result-order=ipv4first --max-old-space-size=4096\" next dev -H :: -p 3000",
    "dev:turbo": "NODE_OPTIONS=\"--dns-result-order=ipv4first --max-old-space-size=4096\" next dev --turbopack -H :: -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:auth": "playwright test user-journey.spec.ts auth.spec.ts",
    "test:e2e:chat": "playwright test chat-functionality.spec.ts",
    "test:e2e:music": "playwright test music-functionality.spec.ts",
    "test:e2e:settings": "playwright test settings-profile.spec.ts",
    "test:e2e:errors": "playwright test error-handling.spec.ts",
    "test:e2e:accessibility": "playwright test accessibility.spec.ts",
    "test:e2e:performance": "playwright test performance.spec.ts",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-query-devtools": "^5.59.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.533.0",
    "next": "15.4.4",
    "next-themes": "^0.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^9.0.3",
    "react-textarea-autosize": "^8.5.3",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.4",
    "typescript": "^5"
  }
}
