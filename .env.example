# Example environment variables for GesahniV2 (DO NOT COMMIT real secrets)
# Copy this to `.env` and fill values for local development.

# Backend Google OAuth (required for Google integration)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/v1/google/auth/callback

# App / JWT
APP_URL=http://localhost:8000
# Choose ONE algorithm. Prefer HS256 for dev; RS256/ES256 for prod.
JWT_ALGS=HS256
# For HS256:
#   Generate: python scripts/jwt_tools.py hs256
JWT_SECRET=
# For RS/ES (prod):
#   Generate: python scripts/jwt_tools.py rs256
#   Paste JSON into:
# JWT_PRIVATE_KEYS={"kid1":"-----BEGIN PRIVATE KEY-----\n..."}
# JWT_PUBLIC_KEYS={"kid1":"-----BEGIN PUBLIC KEY-----\n..."}
JWT_STATE_SECRET=

# Home Assistant (if used)
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=your-long-lived-ha-token

# OpenAI (optional)
OPENAI_API_KEY=

# Startup control (new)
# Enable or disable vendor pings during application startup. If enabled,
# the startup sequence will attempt lightweight pings to vendors like OpenAI
# and Ollama which can increase startup time and cost. Default: disabled
STARTUP_VENDOR_PINGS=0

# Timeout (seconds) for individual vendor startup checks (default: 10)
STARTUP_CHECK_TIMEOUT=10

# Per-step timeout (seconds) for startup component initializers. Each
# component is awaited with this timeout to avoid a stuck boot (default: 30)
STARTUP_STEP_TIMEOUT=30

# Frontend origin (used to build API URLs)
NEXT_PUBLIC_API_ORIGIN=http://localhost:8000

# Spotify OAuth (optional - for music integration)
SPOTIFY_REDIRECT_URI=http://localhost:8000/v1/spotify/callback
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
