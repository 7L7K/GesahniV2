

# üß† Local LLMs
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3:latest

# üí¨ OpenAI fallback
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# üß† Memory system
MEMGPT_MODE=local

# üè† Home Assistant bridge
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your-home-assistant-token

# ü™µ Logging
LOG_LEVEL=INFO

ALLOWED_GPT_MODELS=gpt-4o,gpt-4,gpt-3.5-turbo

ALLOWED_LLAMA_MODELS=llama3,llama3:latest

DEBUG_MODEL_ROUTING=false

SIM_THRESHOLD=0.24

MEM_TOP_K=5

# ---- Vector store: Qdrant (preferred) ----
VECTOR_STORE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_QA_COLLECTION=cache_qa
EMBED_DIM=1536
DISABLE_QA_CACHE=false

# ---- Legacy Chroma settings (not used when VECTOR_STORE=qdrant
# export CHROMA_API_KEY=your-value-here
# export CHROMA_TENANT_ID=your-value-here
# export CHROMA_DATABASE_NAME=your-value-here
# export CHROMA_EMBEDDER=your-value-here

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://127.0.0.1:8000/google/oauth/callback
APP_URL=http://127.0.0.1:3000
NEXT_PUBLIC_API_ORIGIN=http://127.0.0.1:8000
NODE_OPTIONS=--dns-result-order=ipv4first
JWT_SECRET=your-jwt-secret
JWT_STATE_SECRET=your-jwt-state-secret

# üîê Auth mode: Cookie mode for browser-first dev (safer and simpler)
NEXT_PUBLIC_HEADER_AUTH_MODE=0

# üîê Admin UI token (required by /v1/admin/* endpoints)
ADMIN_TOKEN=your-admin-token
NEXT_PUBLIC_ADMIN_TOKEN=your-admin-token
ENFORCE_JWT_SCOPES=0

# Silence HuggingFace tokenizers fork warning and progress bars
TOKENIZERS_PARALLELISM=false

# Clerk (frontend + optional server-side)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key
