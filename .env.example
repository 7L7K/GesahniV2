# ===== Core =====
ENV=dev
HOST=localhost
PORT=8000
APP_URL=http://localhost:3000

# ===== Auth / Security =====
JWT_ALGS=HS256
JWT_EXPIRE_MINUTES=15
JWT_REFRESH_EXPIRE_MINUTES=43200
RATE_LIMIT_PER_MIN=60
JWT_SECRET=
ADMIN_TOKEN=

# ===== CORS =====
CORS_ALLOW_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# ===== Integrations (feature flags) =====
GSNH_ENABLE_MUSIC=1
GSNH_ENABLE_SPOTIFY=1
GSNH_ENABLE_GOOGLE=1
HOME_ASSISTANT_ENABLED=1

# ===== Spotify OAuth =====
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:8000/v1/auth/spotify/callback

# ===== Google OAuth =====
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/v1/auth/google/callback

# ===== OpenAI / Whisper =====
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_TRANSCRIBE_MODEL=whisper-1

# ===== Local LLM (disabled by default) =====
LLAMA_ENABLED=0
OLLAMA_MODEL=llama3:latest
OLLAMA_URL=
LLAMA_MAX_STREAMS=2
OLLAMA_FORCE_IPV6=0

# ===== Embeddings / Vectors =====
EMBEDDING_BACKEND=openai
EMBED_MODEL=text-embedding-3-small
SBERT_MODEL=sentence-transformers/paraphrase-MiniLM-L3-v2
VECTOR_STORE=chroma
CHROMA_PATH=.chroma_data
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=gesahni_memories
STRICT_VECTOR_STORE=0

# ===== App Behavior =====
DETERMINISTIC_ROUTER=1
ROUTER_RULES_PATH=router_rules.yaml
MODEL_ROUTER_HEAVY_WORDS=30
MODEL_ROUTER_HEAVY_TOKENS=1000
INTENT_THRESHOLD=0.7
SIM_THRESHOLD=0.24
MEM_TOP_K=3
MAX_UPLOAD_BYTES=10485760
DISABLE_QA_CACHE=false

# ===== Files / Storage =====
SESSIONS_DIR=sessions
ALBUM_ART_DIR=data/album_art
MUSIC_DB=music.db
NOTES_DB=notes.db
CALENDAR_FILE=data/calendar.json
DATABASE_URL=postgresql://app:app_pw@localhost:5432/gesahni

# ===== Home Assistant =====
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=

# ===== QoL =====
QUIET_HOURS_START=22:00
QUIET_HOURS_END=07:00
PROMETHEUS_ENABLED=1
OTEL_ENABLED=1

# ===== Weather (optional) =====
OPENWEATHER_API_KEY=
